<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.ProfileFragment"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Container to hold the profile info elements -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_gravity="center"
        android:padding="24dp">

        <!-- User Name -->

        <!-- Account Type -->

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAccountType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvUserName"
            android:layout_marginTop="4dp"
            android:text="@string/account_type"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tvAccountType"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray" />

        <!-- Tests Taken -->
        <TextView
            android:id="@+id/tvTestsTaken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAccountType"
            android:layout_marginTop="24dp"
            android:text="@string/tests_taken"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <!-- Tests Passed -->
        <TextView
            android:id="@+id/tvTestsPassed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTestsTaken"
            android:layout_marginTop="8dp"
            android:text="@string/tests_passed"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tvTestsPassed"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray" />

        <!-- Quiz Scores -->
        <TextView
            android:id="@+id/tvQuizScores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTestsPassed"
            android:layout_marginTop="24dp"
            android:text="@string/recent_quiz_scores"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

    </RelativeLayout>
</FrameLayout>
